                        <!--                            app:layout_constraintTop_toBottomOf="@+id/main_tv_statusinfo" />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="start|center_vertical"
                    android:onClick="buttonSetHideFile"
                    android:text="@string/set_encode_files"
                    app:icon="@drawable/ic_folder"
                    app:iconPadding="15dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center_vertical"
                    android:onClick="buttonSetHideApps"
                    android:text="@string/set_hide_apps"
                    app:icon="@drawable/ic_app"
                    app:iconPadding="15dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center_vertical"
                    android:onClick="buttonShowAbout"
                    android:text="@string/show_about"
                    app:icon="@drawable/ic_about"
                    app:iconPadding="15dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

